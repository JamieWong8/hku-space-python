# Deal Scout environment defaults
# Tuning flags for probability tempering to avoid contradictory displays
PROB_TEMPER_ENABLE=true
PROB_TEMPER_TRIP=0.85
PROB_TEMPER_MAX=0.85
PROB_TEMPER_MIN=0.50
PROB_TEMPER_ONLY_AVOID=true

# Precompute conservative probability shrinkage for batch scoring
PRECOMPUTE_PROBA_TAU=1.75
PRECOMPUTE_PROBA_PRIOR=0.40
PRECOMPUTE_PROBA_ALPHA=0.80

# Instant-start behavior
AUTO_TRAIN_ON_IMPORT=false
BOOTSTRAP_FAST=true
LAZY_BACKGROUND_TRAIN=true
PRECOMPUTE_DISABLE=true
